 .nav {
         display: inline-flex;
         margin-top: 100px;
         left: 23%;
         position: relative;
         overflow: hidden;
         max-width: auto;
         background-color: #fff;
         padding: 0 10px;
         border-radius: 40px;
         box-shadow: 0 5px 20px rgba(159, 162, 177, .8);
}
 .nav-item {
         color: #83818c;
         padding: 20px;
         text-decoration: none;
         transition: 0.3s;
         margin: -5px 65px;
         z-index: 1;
         font-family: 'Roboto Condensed', sans-serif;
         font-weight: 500;
         position: relative;
}
 .nav-item:before {
         content: "";
         position: absolute;
         bottom: -6px;
         left: 0;
         width: 100%;
         height: 5px;
         background-color: #dfe2ea;
         border-radius: 8px 8px 0 0;
         opacity: 0;
         transition: 0.3s;
}
 .nav-item:not(.is-active):hover:before {
         opacity: 1;
         bottom: 0;
}
 .nav-item:not(.is-active):hover {
         color: #333;
}
 .nav-indicator {
         position: absolute;
         left: 0;
         bottom: 0;
         height: 4px;
         transition: 0.4s;
         height: 5px;
         z-index: 1;
         border-radius: 8px 8px 0 0;
}
 @media (max-width: 58px) {
         .nav {
                 overflow: auto;
        }
}
